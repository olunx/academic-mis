<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.gdpu.vo">
	<class name="Notice" table="t_notice">
	        <id name="id" column="id">
	                <generator class="native" />
	        </id>
	        <many-to-one name="type" column="ntId" />
	        <many-to-one name="author" column="managerId" />
	        <property name="title" />
	        <property name="time" />
	        <property name="remark" />
	        <property name="content" type="text" />
			<property name="isCmsAllow" />
	        <list name="comments" inverse="false" lazy="true" cascade="all">
	                <key column="parentid" />
	                <list-index column="commentlistid"/>
	                <one-to-many class="Post" />
	        </list>
	</class>
</hibernate-mapping>