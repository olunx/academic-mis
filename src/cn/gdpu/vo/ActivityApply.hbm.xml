<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.gdpu.vo">
	<class name="ActivityApply" table="t_activityApply" >
		<id name="id" column="id">
			<generator class="native" />
		</id>
		<many-to-one name="activity" column="activityId" />
		<property name="applytime" />
		<property name="endtime" />
		<many-to-one name="operator" column="assistantId" />
		<property name="record" />
		<property name="status" />
		<many-to-one name="opus" column="opusId" unique="true"/>
		
		<!-- TeamApply -->
		<joined-subclass name="TeamApply" table="t_teamapply">
			<key column="id" />
			<many-to-one name="group" column="groupId" />
			<set name="applicants" lazy="false" order-by="id asc">
				<key column="ataId" />
			<one-to-many class="Student" />
		</set>
		</joined-subclass>
		
		<!-- SingleApply -->
		<joined-subclass name="SingleApply" table="t_singleapply">
			<key column="id" />
			<many-to-one name="student" column="studentId" />
		</joined-subclass>
	</class>
</hibernate-mapping>
